general {
    interval = 1
}

order += "battery 0"
order += "battery 1"
order += "memory"
order += "tztime local"

battery 0 {
    format = "IN %percentage"
    path = "/sys/class/power_supply/BAT0/uevent"
    last_full_capacity = true
}

battery 1 {
    format = "OUT %percentage"
    path = "/sys/class/power_supply/BAT1/uevent"
    last_full_capacity = true
}

memory {
    format = "%used/ %total"
}

tztime local {
    format = "%A, %B %d - %H:%M"
}

